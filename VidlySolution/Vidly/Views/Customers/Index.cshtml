@model List<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Customers</h2>
@if (Model.Count() == 0)
{
                <p>There are no customers!</p>
}
else
{
<table class=“table”>
    <thead>Movie</thead>
    @foreach (var customer in Model)
    {
        <tr>
            <td><a href="/Customers/Details/@customer.Id">@customer.Name</a> </td>
        </tr>
    }

</table>
}