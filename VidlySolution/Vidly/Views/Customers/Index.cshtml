@model List<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Customers</h2>
@if (Model.Count() == 0)
{
                <p>There are no customers!</p>
}
else
{
<table class="table table-bordered table-hover">
    <th>Movie</th>
    <th>Discount Rate</th>
    @foreach (var customer in Model)
    {
        <tr>
            <td>@Html.ActionLink(customer.Name.ToString(), "Edit", "Customers", new { id = customer.Id }, null)</td>

            @*<td><a href="/Customers/Edit/@customer.Id"> @customer.Name</td>*@

            <td>@customer.MembershipType.DiscountRate%</td>
        </tr>
    }

</table>
}